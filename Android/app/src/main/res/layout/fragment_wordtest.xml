<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="255dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="294dp">

        <Button
            android:id="@+id/btnWordTestChoice1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wordtest_choice_margin"
            android:background="@color/wordTestChoiceDefault"
            android:fontFamily="sans-serif-light"
            android:foreground="@drawable/ripple_bg"
            android:text="Button"
            android:textAllCaps="false"
            android:textColor="@color/wordTestChoiceTextColor"
            android:textSize="@dimen/wordtest_choice_textSize" />

        <Button
            android:id="@+id/btnWordTestChoice2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wordtest_choice_margin"
            android:background="@color/wordTestChoiceIncorrect"
            android:fontFamily="sans-serif-light"
            android:foreground="@drawable/ripple_bg"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="@dimen/wordtest_choice_textSize" />

        <Button
            android:id="@+id/btnWordTestChoice3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wordtest_choice_margin"
            android:background="@color/wordTestChoiceDefault"
            android:fontFamily="sans-serif-light"
            android:foreground="@drawable/ripple_bg"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="@dimen/wordtest_choice_textSize" />

        <Button
            android:id="@+id/btnWordTestChoice4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wordtest_choice_margin"
            android:background="@color/wordTestChoiceCorrect"
            android:fontFamily="sans-serif-light"
            android:foreground="@drawable/ripple_bg"
            android:text="Button"
            android:textAllCaps="false"
            android:textSize="@dimen/wordtest_choice_textSize" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>